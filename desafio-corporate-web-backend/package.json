{
	"name": "desafio-corporate-web-backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build:prisma": "prisma generate",
		"build:nest": "nest build",
		"build": "npm run prebuild && npm run build:prisma && npm run build:nest",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/src/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"prisma:migrate:dev": "prisma migrate dev",
		"prisma:studio": "prisma studio",
		"prisma:reset": "prisma migrate reset --force"
	},
	"dependencies": {
		"@automapper/classes": "^8.8.1",
		"@automapper/core": "^8.8.1",
		"@automapper/nestjs": "^8.8.1",
		"@nestjs/common": "^9.4.3",
		"@nestjs/core": "^9.4.3",
		"@nestjs/platform-express": "^9.4.3",
		"@nestjs/swagger": "^6.3.0",
		"@prisma/client": "^6.16.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"reflect-metadata": "~0.1.13",
		"rxjs": "^7.2.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^9.4.3",
		"@nestjs/schematics": "^9.0.0",
		"@nestjs/testing": "^9.4.3",
		"@types/express": "^4.17.13",
		"@types/jest": "^29.5.1",
		"@types/node": "18.16.12",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^29.5.0",
		"prettier": "^2.3.2",
		"prisma": "^6.16.2",
		"rimraf": "^6.0.1",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.2.0",
		"typescript": "^5.0.0"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testRegex": ".*\\.spec\\.ts$",
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"moduleNameMapper": {
			"^@src/(.*)$": "<rootDir>/src/$1"
		},
		"transform": {
			"^.+\\.(t|j)s$": [
				"ts-jest",
				{
					"tsconfig": "tsconfig.json"
				}
			]
		},
		"coverageDirectory": "./coverage",
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/index.ts",
			"!src/**/*module.ts",
			"!src/main.ts",
			"!node_modules/**/*",
			"!dist/**/*",
			"!src/controller/dto/*.ts",
			"!src/controller/profiles/*.ts",
			"!src/filter/*.ts",
			"!src/infrastructure/*.ts",
			"!src/model/*.ts"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/dist/",
			"/src/controller/dto/",
			"/src/controller/profiles/",
			"/src/filter/",
			"/src/infrastructure/",
			"/src/model/"
		]
	}
}
